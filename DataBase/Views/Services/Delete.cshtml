@model DataBase.Models.Service

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Service</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>@Model.ServicesName</h4>
    <hr />
    <dl class="row">
        <dt>Name</dt>
        <dd>@Model.ServicesName</dd>

        <dt>Price</dt>
        <dd>@Model.Price</dd>

        <dt>Description</dt>
        <dd>@Model.Description</dd>

        <dt>Image</dt>
        <dd>
            @if (!string.IsNullOrEmpty(Model.ServiceImg))
            {
                <img src="@Model.ServiceImg" alt="Service Image" class="img-thumbnail" style="max-width: 200px;" />
            }
        </dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="ServicesId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
