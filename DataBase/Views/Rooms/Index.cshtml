@model IEnumerable<DataBase.Models.Room>

@{
    ViewData["Title"] = "Rooms by Type";
}

<h1>Кімнати</h1>

<p>
    <a asp-action="Create">Додати нову кімнати</a>
</p>

<table class="table">
    <thead>
        <tr>

            <th>
                Номер кімнати
            </th>
            <th>
                Ціна
            </th>
            <th>
                Кількість осіб
            </th>
            <th>
                Доступність
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var room in Model)
        {
            <tr>
                <td>
                    @room.TypeAndNumber
                </td>
                <td>
                    @room.RoomType.Price.ToString("C")
                </td>
                <td>
                    @room.RoomType.Capacity
                </td>
                <td>
                    @if (room.IsAvailable)
                    {
                        <span class="text-success">Вільна</span>
                    }
                    else
                    {
                        <span class="text-danger">Зайнята</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@room.RoomId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@room.RoomId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@room.RoomId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
