@model DataBase.Models.Room

@{
    ViewData["Title"] = "Delete Room";
}

<h1>Delete Room</h1>

<h3>Are you sure you want to delete this room?</h3>
<div>
    <h4>Room Details</h4>
    <hr />
    <dl class="row">
        <!-- Room Number -->
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RoomNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoomNumber)
        </dd>

        <!-- Room Type -->
        <dt class="col-sm-2">
            Room Type
        </dt>
        <dd class="col-sm-10">
            @Model.RoomType?.TypeName ?? "N/A"
        </dd>

        <!-- Capacity -->
        <dt class="col-sm-2">
            Capacity
        </dt>
        <dd class="col-sm-10">
            @Model.RoomType?.Capacity ?? "N/A"
        </dd>

        <!-- Is Available -->
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @if (Model.IsAvailable)
            {
                <span class="text-success">Available</span>
            }
            else
            {
                <span class="text-danger">Occupied</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="RoomId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>