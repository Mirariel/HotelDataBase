@model DataBase.Models.ServiceUsage

@{
    ViewData["Title"] = "Edit";
}

<h1>Редагувати</h1>

<h4>Замовлена послуга</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UsageId" />
            <div class="form-group">
                <label asp-for="ReservationId" class="control-label">Дані клієнта</label>
                <select asp-for="ReservationId" class="form-control" asp-items="ViewBag.ReservationId"></select>
                <span asp-validation-for="ReservationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServicesId" class="control-label">Послуга</label>
                <select asp-for="ServicesId" class="form-control" asp-items="ViewBag.ServicesId"></select>
                <span asp-validation-for="ServicesId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeId" class="control-label">Працівник</label>
                <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExecutionDate" class="control-label">Дата та час виконання</label>
                <input asp-for="ExecutionDate" class="form-control" type="datetime-local" />
                <span asp-validation-for="ExecutionDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
