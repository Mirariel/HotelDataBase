@model DataBase.Models.ServiceUsage

@{
    ViewData["Title"] = "Delete";
}

<h1>Видалення</h1>

<h3>Ви дійсно бажаєте видалити?</h3>
<div>
    <h4>Замовлена послуга</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Дані клієнта
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.DisplayText)
        </dd>
        <dt class="col-sm-2">
            Працівник
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Employee.NameWithPosition)
        </dd>
        <dt class="col-sm-2">
            Послуга
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Services.ServicesName) 
        </dd>
        <dt class="col-sm-2">
            Дата виконання
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ExecutionDate) 
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="UsageId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
