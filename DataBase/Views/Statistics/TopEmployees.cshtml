@model List<DataBase.Controllers.TopEmployee>

@{
    ViewBag.Title = "Топ 3 працівники";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Топ 3 працівники</h2>
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Працівник</th>
                        <th scope="col">Кількість наданих послуг</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.EmployeeName</td>
                            <td>@employee.ServiceCount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("Index", "Statistics")" class="btn btn-secondary">Назад</a>
        </div>
    </div>
</div>


<style>
    .card {
        border-radius: 10px;
    }

    th, td {
        font-size: 1.1rem;
    }
</style>

