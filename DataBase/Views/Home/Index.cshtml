@model IEnumerable<DataBase.Models.RoomType>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center" id="homePageContainer">
    <div class="container2" id="roomsSection">
        <h2 style="text-align: center; margin: 30px 0;">Наші номери</h2>

        <div class="slideshow-container">
            @foreach (var room in Model)
            {
                <div class="slides">
                    <a href="@Url.Action("Room", "HotelRoom", new { Type = room.TypeId })">
                        <img src="@(room.ImageUrl ?? "~/images/default-room.png")" alt="@room.TypeName">
                        <div class="caption">
                            <h3>@room.TypeName</h3>
                            <p>@room.Description</p>
                            <p><strong>Ціна:</strong> @room.Price грн</p>
                            <p><strong>Місткість:</strong> @room.Capacity осіб</p>
                        </div>
                    </a>
                </div>
            }

            <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
            <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
    </div>
</div>

<script src="~/js/homescript.js"></script>

