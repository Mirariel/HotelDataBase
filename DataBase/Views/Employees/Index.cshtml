@model IEnumerable<DataBase.Models.Employee>

@{
    ViewData["Title"] = "Index";
}

<h1>Працівники</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Ім'я
            </th>
            <th>
                Прізвище
            </th>
            <th>
                Посада
            </th>
            <th>
                Дата народження:
            </th>
            <th>
                Номер телефону
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                Дата працевлаштування
            </th>
            <th>
                Адреса проживання
            </th>
            <th>
                Освіта
            </th>
            <th>
               Заробітня плата
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResidencePlace)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Education)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.EmployeesId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.EmployeesId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.EmployeesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
